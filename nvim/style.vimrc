" Color theme
syntax enable

" Line numbers
set number

" Mouse
set mouse=a

" Defaults
set tabstop=2
set shiftwidth=2
set smarttab

" Hidden characters
set list
set listchars=eol:¬,tab:─→,trail:·,nbsp:⌴

" Improved highlighting
let python_highlight_all=1

" Show command at the bottom right
set showcmd
